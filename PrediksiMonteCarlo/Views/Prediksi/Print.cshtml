@model List<HasilAkhir>

    <div id="divCetak" class="row p-3 border" style="text-align:center; margin-bottom:30px">
        <button id="btnPrint" onclick="Print()" class="btn btn-primary form-control" asp-route="Print">Cetak Hasil Prediksi</button>

    </div>

    <div class="row p-3 border" id="hasilSimulasi">

        <h1 style="text-align:center">LAPORAN HASIL SIMULASI MONTECARLO</h1>
        <h2 style="text-align:center">PT. BINTAN MOTOR BERJAYA TANJUNGPINANG </h2>

    </div>

    <div class="row p-3 border" id="hasilSimulasi">
        <div>
            <div class="row">

                <h2>Hasil Akhir Simulasi </h2>

            </div>

            <br />

            <div class="p-4 border rounded" style="text-align:center;">
                <table id="tblHasil" class="table table-striped table-bordered" style="width:100%; padding-top:10px">
                    <thead class="thead-dark">
                        <tr class="table-info">
                            <th>Bulan</th>
                            <th>Tahun</th>
                            <th>Angka Acak</th>
                            <th>Interval</th>
                            <th>Hasil Simulasi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var obj in Model)
                            {
                            <tr>
                                <td>
                                    @obj.Bulan
                                </td>
                                <td>
                                    @obj.Tahun
                                </td>
                                <td>
                                    @obj.RandomNumber
                                </td>
                                <td>
                                    @obj.Interval
                                </td>
                                <td>
                                    @obj.Hasil
                                </td>
                            </tr>
                            }
                    </tbody>
                </table>

            </div>

            <div style="display:flex">
                <div class="col-4">

                </div>
                <div class="col-4">

                </div>
                <div class="col-4">
                    <h3 style="text-align:center; margin-top:30px"> Mengetahui</h3>
                    <br><br><br><br />
                    <h3 style="text-align:center"> Direktur</h3>

                </div>
            </div>
        </div>
    </div>

    <script>function Print() {

            document.getElementById('divCetak').hidden = true;

            document.getElementById('navMenu').hidden = true;

            window.print();

            document.getElementById('divCetak').hidden = false;

            document.getElementById('navMenu').hidden = false;

        }</script>