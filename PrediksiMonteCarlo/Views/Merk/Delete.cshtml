@model Merk

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Delete Merk";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">

        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Merk</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">

            <div class="row p-3 border">

                <input type="hidden" asp-for="@Model.Id" />

                <div class="col-12 border-bottom">
                    <h2 class="text-primary">@title</h2>
                </div>
                <div class="col-8 pt-4">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Nama"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="Nama" disabled class="form-control" />
                           
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-8 offset-4" style="padding-top:20px">
                            
                                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

</div>