@model PrediksiMonteCarlo.ViewModels.PenjualanVM

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Create Penjualan";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">

        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Penjualan</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row">

            <div class="row p-3 border">

                @if (Model.Penjualan.Id != 0)
                {
                    title = "Edit Penjualan";
                }

                <input type="hidden" asp-for="@Model.Penjualan.Id" />

                <div asp-validation-summary="ModelOnly"></div>

                <div class="col-12 border-bottom">
                    <h2 class="text-primary">@title</h2>
                </div>

                <div class="col-8 pt-4">
                    <div class="form-group row" style="padding-bottom:20px; padding-top:20px">
                        <div class="col-4">
                            Nama Motor
                        </div>
                        <div class="col-8">

                            <select id="cbMotor" asp-for="@Model.Penjualan.NamaMotor" asp-items="@Model.MotorList" class="form-select border-0 shadow" onchange="Search()">
                                <option disabled selected>--Select Category--</option>
                            </select>

                            <span asp-validation-for="Penjualan.Id" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-2">
                        <div class="col-4">
                            <label asp-for="@Model.Penjualan.Merk"></label>
                        </div>
                        <div class="col-8">

                            <input id="txtMerk" asp-for="@Model.Penjualan.Merk" disabled class="form-control" />

                        </div>
                    </div>

                    <div class="form-group row mb-2">
                        <div class="col-4">
                            <label asp-for="Penjualan.Harga"></label>
                        </div>
                        <div class="col-8">
                            <input id="txtHarga" asp-for="Penjualan.Harga" disabled class="form-control" />
                        </div>
                    </div>

                    <div class="form-group row mb-2">
                        <div class="col-4">
                            <label asp-for="Penjualan.Jumlah"></label>
                        </div>
                        <div class="col-8">
                            <input id="txtJumlah" asp-for="Penjualan.Jumlah" class="form-control" />
                            <span asp-validation-for="Penjualan.Jumlah" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="Penjualan.Tanggal"></label>
                        </div>
                        <div class="col-8">
                            <input id="tglPenjualan" asp-for="Penjualan.Tanggal" type="date" class="form-control">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-8 offset-4" style="padding-top:20px">
                            @if (Model.Penjualan.Id != 0)
                            {
                                <partial name="_EditAndBackToListButton" model="Model.Penjualan.Id" />
                            }
                            else
                            {
                                <partial name="_CreateAndBackToListButton" />
                            }
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/Penjualan.js"></script>

<script>
    $("#cbMotor").on('change', function () {
        window.sessionStorage.setItem("cbMotor", this.value);
    });

</script>
}